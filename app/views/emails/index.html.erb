
<%= link_to "Recevoir un email", emails_path, method: "post", remote: true, class: "btn btn-primary" %>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-striped table-hover table-sm">
      <thead>
          <tr>
          <th class="col-4" scope="col">Liste des emails</th>
          <th class="col-8" scope="col">Email Sélectionné</th>
          </tr>
      </thead>
      <tbody>
          <tr id="emails">
            <% @emails.each do |email| %>
            <td>
              <%= link_to email.object, email_path(email.id), method: "get", remote: true %>
            </td>
            <td id="body-<%= email.id %>">
              <%= email.body%> 
            </td>
          </tr>
          <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>